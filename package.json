{
  "name": "smart-timer-desktop",
  "version": "1.0.0",
  "description": "Desktop windowed timer app built with Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:icon": "node scripts/build-icon.js",
    "package:win": "npm run build:icon && electron-packager . SmartTimer --platform=win32 --arch=x64 --overwrite --out=dist --icon=TimerLogo.ico"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-packager": "^17.1.2",
    "png-to-ico": "^3.0.1"
  }
}
